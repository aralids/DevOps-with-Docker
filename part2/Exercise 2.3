version: '3.8'

services:

  backend:
    build:
      context: ./example-backend
      dockerfile: Dockerfile
    image: golang:1.16
    environment:
      - PORT=8080
      - REQUEST_ORIGIN=http://127.0.0.1:5000
    ports:
      - 127.0.0.1:8080:8080
    command: ./server

  frontend:
    build:
      context: ./example-frontend
      dockerfile: Dockerfile
    image: node:16-alpine
    environment:
      - PORT=5000
    ports:
      - 127.0.0.1:5000:5000
    command: serve -s -l 5000 build
